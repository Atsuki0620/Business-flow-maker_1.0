{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/flow.schema.json",
  "title": "Business Flow Maker Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["actors", "phases", "tasks", "flows", "issues"],
  "properties": {
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {"type": "string"},
        "title": {"type": "string"},
        "source": {"type": "string"},
        "last_updated": {
          "type": "string",
          "format": "date"
        },
        "generation": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "model": {"type": "string"},
            "provider": {"type": "string", "enum": ["openai", "azure"]}
          }
        }
      }
    },
    "actors": {
      "type": "array",
      "minItems": 1,
      "items": {"$ref": "#/$defs/actor"}
    },
    "phases": {
      "type": "array",
      "minItems": 1,
      "items": {"$ref": "#/$defs/phase"}
    },
    "tasks": {
      "type": "array",
      "minItems": 1,
      "items": {"$ref": "#/$defs/task"}
    },
    "gateways": {
      "type": "array",
      "items": {"$ref": "#/$defs/gateway"},
      "default": []
    },
    "flows": {
      "type": "array",
      "minItems": 1,
      "items": {"$ref": "#/$defs/flow"}
    },
    "issues": {
      "type": "array",
      "items": {"$ref": "#/$defs/issue"},
      "default": []
    }
  },
  "$defs": {
    "actor": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name"],
      "properties": {
        "id": {"type": "string"},
        "name": {"type": "string"},
        "type": {
          "type": "string",
          "enum": ["human", "system", "bot", "group"],
          "default": "human"
        },
        "notes": {"type": "string"}
      }
    },
    "phase": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name"],
      "properties": {
        "id": {"type": "string"},
        "name": {"type": "string"},
        "description": {"type": "string"}
      }
    },
    "task": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name", "actor_id", "phase_id"],
      "properties": {
        "id": {"type": "string"},
        "name": {"type": "string"},
        "actor_id": {"type": "string"},
        "phase_id": {"type": "string"},
        "raci": {
          "type": "string",
          "enum": ["R", "A", "C", "I"]
        },
        "handoff_to": {
          "type": "array",
          "items": {"type": "string"},
          "default": []
        },
        "systems": {
          "type": "array",
          "items": {"type": "string"},
          "default": []
        },
        "notes": {"type": "string"}
      }
    },
    "gateway": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "type", "name"],
      "properties": {
        "id": {"type": "string"},
        "name": {"type": "string"},
        "type": {
          "type": "string",
          "enum": ["exclusive", "parallel", "inclusive"],
          "default": "exclusive"
        },
        "notes": {"type": "string"}
      }
    },
    "flow": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "from", "to"],
      "properties": {
        "id": {"type": "string"},
        "from": {"type": "string"},
        "to": {"type": "string"},
        "condition": {"type": "string"},
        "notes": {"type": "string"}
      }
    },
    "issue": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "note"],
      "properties": {
        "id": {"type": "string"},
        "note": {"type": "string"},
        "severity": {
          "type": "string",
          "enum": ["info", "warning", "critical"],
          "default": "info"
        }
      }
    }
  }
}
